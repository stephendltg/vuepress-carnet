/* animate */
@media (print), (prefers-reduced-motion: reduce) {
  .hero img  {
    animation-duration: 1ms !important;
    transition-duration: 1ms !important;
    animation-iteration-count: 1 !important; 
  }
}

@keyframes fadeInDownBig {
  from {
    opacity: 0;
    transform: translate3d(0, -2000px, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

.hero img {
  animation-duration: 2s;
  animation-fill-mode: both;
  // animation-delay: 1s;
  // animation-iteration-count: infinite;
  animation-name: fadeInDownBig;
  // animation-duration: 1.3s;
  animation-timing-function: ease-in-out;
}

body{
    font-family: 'Roboto';
}

h1, h2{
    font-family: 'Oswald';
}

h1 {
    font-variant: small-caps;
}

h2 {
    text-transform: uppercase;
}

h3 {
    opacity: 0.9;
}


.prestations h2, .mentions h2{
    border-bottom: none !important;
}

.prestations h2:after, .mentions h2:after{
    content: ""; /* This is necessary for the pseudo element to work. */ 
    display: block; /* This will put the pseudo element on its own line. */
    margin: 0 0; /* This will center the border. */
    width: 5%; /* Change this to whatever width you want. */
    padding-top: 20px; /* This creates some space between the element and the border. */
    border-bottom: 3px solid #272D47; /* This creates the border. Replace black with whatever color you want. */
}

